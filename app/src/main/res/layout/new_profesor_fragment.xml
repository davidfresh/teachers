<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/new_book_text_edit_padding"
        android:layout_margin="@dimen/new_book_text_edit_padding"
        android:hint="@string/nomprofe"
        android:id="@+id/nombre_edit" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/new_book_text_edit_padding"
        android:layout_margin="@dimen/new_book_text_edit_padding"
        android:hint="@string/materiaprofe"
        android:id="@+id/materia_edit" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/escue_edit"
        android:padding="@dimen/new_book_text_edit_padding"
        android:layout_margin="@dimen/new_book_text_edit_padding"
        android:hint="@string/escuelaprofe"
        android:layout_gravity="center_horizontal" />


</LinearLayout>